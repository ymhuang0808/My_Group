<div class="span12">
	<div class="group">
		<%= link_to("新群組", new_group_path, :class => "btn btn-mini btn-primary pull-right") %>
	</div>
	<table>
		<thead>
			<tr>
				<th>#</th>
				<th>Title</th>
				<th>Description</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			<% @groups.each do |group| %>
			<tr>
				<td>#<%= group.id %> </td>
				<td> <%= link_to(group.title, group_path(group)) %> </td>
				<td> <%= group.description %> </td>
				<td>
					<%= link_to("編輯", edit_group_path(group), :class => "btn btn-mini") %>
					<%= link_to("刪除", group_path(group), :class => "btn btn-mini", :method => :delete, :confirm => "Are you okay?")%>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>